    <style>
        .swiper-container {
        width: 80%;
        max-width: 600px;
        margin: 50px auto;
        overflow: hidden;
        position: relative;
        border-radius: 8px;
        background: #fff;
        margin-left: 5px;
        margin-top: 10px;
        }
        .swiper-wrapper {
        display: flex;
        transition: transform 0.3s ease;
        }
        .swiper-slide {
        min-width: 100%;
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 300px;
        background-color:rgb(176, 203, 232);
        color: white;
        font-size: 24px;
        text-align: center;
        }
        .swiper-buttons {
        position: absolute;
        top: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
        }
        .swiper-button {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        padding: 10px;
        cursor: pointer;
        border: none;
        border-radius: 50%;
        }
        .swiper-image {
            width: 100%;
            height: auto;
            object-fit: cover;
        }
        .container{
            margin-top : 5px;
            margin-left : 5px;
            height: 100%;
            width: 100%; 
            overflow-y: auto; 
        }
    </style>
